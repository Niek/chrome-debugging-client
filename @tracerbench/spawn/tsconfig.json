{
  "compilerOptions": {
    "composite": true,
    "lib": ["scripthost", "es2017"],
    "types": ["node", "execa"],

    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "newLine": "LF",

    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2017"
  },
  "include": ["src/*.ts"]
}
