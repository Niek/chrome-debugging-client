{
  "compilerOptions": {
    "composite": true,
    "lib": ["scripthost", "es2017"],
    "types": ["node"],

    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "newLine": "LF",

    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2017"
  },
  "files": ["src/index.ts"],
  "references": [
    {
      "path": "../@tracerbench/find-chrome"
    },
    {
      "path": "../@tracerbench/protocol-connection"
    },
    {
      "path": "../@tracerbench/spawn"
    },
    {
      "path": "../@tracerbench/spawn-chrome"
    },
    {
      "path": "../@tracerbench/websocket-message-transport"
    }
  ]
}
