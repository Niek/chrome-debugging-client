{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es2015",
    "outDir": "dist",
    "sourceMap": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node"
  },
  "files": [
    "codegen/index.ts",
    "lib/index.ts",
    "protocol/1-2.ts",
    "protocol/tot.ts",
    "protocol/v8.ts",
    "test/node.test.ts",
    "test/rest.test.ts",
    "test/targets.test.ts",
    "test/protocol.test.ts"
  ]
}
